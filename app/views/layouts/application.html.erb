<!DOCTYPE html>
<html>
  <head>
    <title>MilesLog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Compiled and minified CSS -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">

   <!-- Compiled and minified JavaScript -->
   <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <% if logged_in? %>
        <ul id="nav-mobile" class="right">
          <li><%= link_to 'Profile', user_path(current_user) %></li>
          <li><%= link_to 'Logut', logout_url %></li>
        </ul>
          <ul id="nav-mobile" class="left">
            <li><%= link_to 'Days Driven', user_days_path(current_user) %></li>
            <li><%= link_to 'Paydays', user_paydays_path(current_user) %></li>
            <li><%= link_to 'Expenditures', user_expenditures_path(current_user) %></li>
          </ul>
        <% else %>
        <ul id="nav-mobile" class="right">
          <li><%= link_to 'Join', new_user_url %></li>
          <li><%= link_to 'Login', login_url %></li>
        </ul>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
